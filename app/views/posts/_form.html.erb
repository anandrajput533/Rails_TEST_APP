<%= form_with(model: post, local: true, class: "needs-validation") do |form| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :tags %>
    <%= form.text_field :tag_list, id: 'post_tags', value: @post.tags.map(&:name).join(','), placeholder: 'Add tags...' %>
  </div>
  <div class="mb-3">
    <%= form.label :images, class: "form-label" %>
    <%= form.file_field :images, multiple: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Save Post", class: "btn btn-primary" %>
  </div>
<% end %>
<script type="module">
$(document).ready(function() {
  $('#post_tags').selectize({
    plugins: ["restore_on_backspace", "clear_button"],
    delimiter: " - ",
    persist: false,
    maxItems: null,
    valueField: "name",
    labelField: "name",
    searchField: ["id", "name"],
    options: <%= raw @tags.to_json %>,
    create: function(input) {
      return {
        id: input,
        name: input
      };
    }
  });
});


</script>