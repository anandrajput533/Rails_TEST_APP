<h1>User Profile</h1>

<div class="card">
  <div class="card-body">
    <% if @user.avatar.attached? %>
      <div class="mb-3">
        <%= image_tag @user.avatar, size: "150x150", class: 'img-thumbnail' %>
      </div>
    <% end %>

    <h5 class="card-title"><%= @user.user.email %></h5>

    <div class="mb-2">
      <strong>City:</strong>
      <%= @user.city.present? ? @user.city : 'Not provided' %>
    </div>

    <div class="mb-2">
      <strong>State:</strong>
      <%= @user.state.present? ? @user.state : 'Not provided' %>
    </div>

    <div class="mb-2">
      <strong>Country:</strong>
      <%= @user.country.present? ? @user.country : 'Not provided' %>
    </div>

    <div class="mb-2">
      <strong>Phone:</strong>
      <%= @user.phone.present? ? @user.phone : 'Not provided' %>
    </div>

    <div class="mb-2">
      <strong>Gender:</strong>
      <%= @user.gender.present? ? @user.gender : 'Not provided' %>
    </div>

    <div class="mt-3">
      <%= link_to 'Edit Profile', edit_profile_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
