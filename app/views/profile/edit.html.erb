<h1>Edit Profile</h1>

<%= form_with(model: current_user.profile, url: update_profile_path, local: true, html: { multipart: true }) do |f| %>
  <div class="form-group">
    <%= f.label :avatar, class: 'form-label' %>
    <%= f.file_field :avatar, class: 'form-control' %>
    <% if current_user.profile.avatar.attached? %>
      <div class="mt-2">
        <%#= image_tag current_user.avatar, size: "100x100", class: 'img-thumbnail' %>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :city, class: 'form-label' %>
    <%= f.text_field :city, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :state, class: 'form-label' %>
    <%= f.text_field :state, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :country, class: 'form-label' %>
    <%= f.text_field :country, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phone, class: 'form-label' %>
    <%= f.text_field :phone, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :gender, class: 'form-label' %>
    <%= f.select :gender, ["Male", "Female", "Other"], { include_blank: true }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Update Profile', class: 'btn btn-primary' %>
  </div>
<% end %>
